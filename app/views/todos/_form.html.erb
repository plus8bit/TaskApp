<div class="container">
  <div class='row'>
    <div class="col-md-12">


      <%= simple_form_for ([@user, @todo]) do |f| %>
        <div class="form-group">
          <%= f.input :title, class: "form-control", placeholder: "Title"%>
        </div>
        <div class="form-group">
          <%= f.input :description, class: "form-control", placeholder: "Description"%>
        </div>

        <%= f.button :submit, class: "btn btn-success" %>
        <%= link_to "Cancel", user_todos_path, class: "btn btn-danger" %>
      <% end %>

    </div>
  </div>
</div>

